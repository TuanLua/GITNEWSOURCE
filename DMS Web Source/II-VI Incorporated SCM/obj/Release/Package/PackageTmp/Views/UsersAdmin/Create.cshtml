@model II_VI_Incorporated_SCM.Models.Account.RegisterViewModel
@{
    ViewBag.Title = "Create a New Account";
}
@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>@ViewBag.Title.</h2>
    <hr />
    
    <div class="form-group">
        @Html.LabelFor(m => m.Fullname, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @*@Html.ValidationMessageFor(m => m.Fullname, null, new { @class = "help-block text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @*@Html.ValidationMessageFor(m => m.Email, null, new { @class = "help-block text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @*@Html.ValidationMessageFor(m => m.Username, null, new { @class = "help-block text-danger" })*@
        </div>
    </div><div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @*@Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @*@Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "help-block text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">
            Select User Group
        </label>
        <div class="col-md-10">
            @foreach (var item in (SelectList)ViewBag.GroupsList)
            {
                <div>
                    <input type="checkbox" id="@item.Text" name="selectedGroups" value="@item.Value" class="checkbox-inline" />
                    @Html.Label(item.Text, new { @class = "control-label" })
                </div>
            }
        </div>
    </div>

    <div class="form-group hidden" id="OPEOwn">
        @Html.Label("OPELabel", "Owner OPE", new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            @Html.DropDownListFor(m => m.OPE, (List<SelectListItem>)ViewBag.OPEUserList, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ValidationSummary("", new { @class = "help-block text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Create" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
</div>
@*@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}*@
<script>
    var $cbxInspector = $('input:checkbox[id="Inspector"]');
    $cbxInspector.change(function () {
        if ($(this).is(':checked')) {
            $('#OPEOwn').removeClass("hidden")
        } else {
            $('#OPE').val('')
            $('#OPEOwn').addClass("hidden")
        }
    });
</script>