@model II_VI_Incorporated_SCM.Models.NCR_HDR

@{
    ViewBag.Title = "PrintMRBTAG";
}
<link href='https://fonts.googleapis.com/css?family=Lekton' rel='stylesheet' type='text/css'>
<style>
    #tbMrbTag td{
        /*font-family: Lekton !important;*/
        vertical-align: text-top;
    }
    .title {
        font-weight: bold;
        font-size: 13px;
    }
    .text{
        font-size: 10px;
    }
    </style>
<table style="width: 265px; height: 152px;" id="tbMrbTag"  >
    <tr >
        <td><span class="title">MRB TAG</span></td>
        <td><span class="title" style="width: 50%">Ref:</span> <span class="text">@Model.NCR_NUM </span></td>
    </tr>
    <tr>
        <td colspan="2"><span class="title">Part #:</span> <span style="width:100%;">@Model.MI_PART_NO</span></td>
    </tr>
    <tr>
        <td><span class="title">Desc: </span> <span class="text"> @Model.ITEM_DESC </span></td>
        <td><span class="title">Lot #:</span> <span class="text"> @Model.LOT.Trim() </span></td>
    </tr>
    <tr>
        <td><span class="title">Process code:</span> </td>
        <td><span class="title">Insp. Date:</span> <span class="text">@Model.INS_DATE.Value.ToString("dd MMM yy", System.Globalization.CultureInfo.InvariantCulture)</span></td>
    </tr>
    <tr>
        <td><span class="title">Emp #:</span> </td>
        <td><span class="title">Q'ty:</span> <span class="text">@Model.REJ_QTY</span></td>
    </tr>
    <tr>
        <td colspan="2"><span style="font-weight:bold">Defect:</span> <span class="text">@Html.Raw(ViewBag.NCR_DET_DESC)</span></td>
    </tr>
</table>

@section scripts
{
    <script src="~/Scripts/printThis/printThis.js"></script>
    <script>
        $("#tbMrbTag").printThis();
    </script>
}