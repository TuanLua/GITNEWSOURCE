        function onFind(condition) {
            $('.searchField').text(condition);

            if (condition == 'RefNUMBER') {
                $('#search').val();
                $('#searchId').val(0);
            }
            else if (condition == 'Owner') {
                $('#searchId').val(1);
            }
            else if (condition == 'Assignee') {
                $('#searchId').val(2);
            }
            else if (condition == 'Priority') {
                $('#searchId').val(6)
            }
            else if (condition == 'TaskName') {
                $('#searchId').val(4)
            }
            else if (condition == 'TaskID') {
                $('#searchId').val(5)
            }
            $('#popup').modal('show');
        }
