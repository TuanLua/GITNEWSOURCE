@model II_VI_Incorporated_SCM.Models.Account.ApplicationGroup

@{
    ViewBag.Title = "Delete Group Role";
}
<h2>@ViewBag.Title</h2>
<h3>Are you sure you want to delete this?</h3>
@using (Html.BeginForm("Delete", "GroupsAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label"><b>Group Role name:</b></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Name</p>
        </div>
    </div>
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label"><b>Description:</b></label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Description</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
}
@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
