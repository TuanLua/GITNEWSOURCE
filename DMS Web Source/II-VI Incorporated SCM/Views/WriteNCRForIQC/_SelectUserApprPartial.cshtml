@model List<SelectList>

<div class="portlet grey bordered">
    <div class="row">
        <div class="col-md-12 form-horizontal">
            <div class="col-md-6 form-group">
                <div class="col-md-12">
                    <h3 style="font-weight: bold">MARLOW MRB AUTHORIZATION 1</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6 form-group">
                <div class="col-md-6">
                    <label class="control-label" style="font-weight: bold">QUALITY ASSURANCE</label>
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("qualityAss", Model[0], new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <div class="col-md-6">
                    <label class="control-label" style="font-weight: bold">ENGINEERING</label>
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("engineer", Model[1], new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6 form-group">
                <div class="col-md-6">
                    <label class="control-label" style="font-weight: bold">AFG/ASSYE</label>
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("afgassy", Model[2], new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-6 form-group">
                <div class="col-md-6">
                    <label class="control-label" style="font-weight: bold">PURCHASING</label>
                </div>
                <div class="col-md-6">
                    @Html.DropDownList("purchasing", Model[3], new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
