             $.post('@Url.Action("GetListAnalyst", "SoReview")',
                function (result) {
                    $.each(result, function (i, item) {
                        $('#analyst').append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                }).fail(function () {
                    bootbox.alert('Please contact to Administrator!');
                }).always(function () {
                });
            $("#analyst").select2();
            var $newOption = $("<option selected='selected'></option>").val("").text("")
            $("#analyst").append($newOption).trigger('change');

            //user
            $.post('@Url.Action("GetListUser", "SoReview")',
                function (result) {
                    $.each(result, function (i, item) {
                        $('#QMSDropdown').append($('<option>', {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                }).fail(function () {
                    bootbox.alert('Please contact to Administrator!');
                }).always(function () {
                });
            $("#QMSDropdown").select2();
            var $newOption = $("<option selected='selected'></option>").val("").text("")
            $("#QMSDropdown").append($newOption).trigger('change');
        }
     });

    //Delete
    $("#gridQMSSummary tbody").on("click", ".btn-delete", function () {
