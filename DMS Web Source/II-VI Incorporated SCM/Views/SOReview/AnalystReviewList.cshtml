            buttons: {
                confirm: {
                    label: 'Yes',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'No',
                    className: 'btn-danger'
                }
            },
            closeButton: false,
            callback: function (result) {
                if (result) {
                      $.ajax({
