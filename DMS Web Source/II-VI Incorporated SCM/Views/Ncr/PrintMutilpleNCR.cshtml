                    </td>
                </tr>
                <tr>
                    <td>
                        <p>
                            <b>STREET ADDRESS</b>
                        </p>
                        @Model[0].VEN_ADD
                    </td>
                </tr>
                <tr class="odd gradeX">
                    <td style="text-align: left">
                        <p>
                            <b>CITY :</b>@Model[0].CITY
                            <b>STATE:</b> @Model[0].STATE <b> ZIP CODE:</b> @Model[0].ZIP_CODE
                        </p>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>
    <br />
    <div>
        <table class="table table-bordered ">
            <tbody>
                <tr>
                    <td>#</td>
                    <td>MI Part No</td>
                    <td>REV </td>
                    <td>Description of Material </td>
                    <td>NCR Num</td>
                    <td>Inspected Date </td>
                    <td>Inspect Qty </td>
                    <td>Reject Qty </td>
                </tr>
            </tbody>
            @foreach (var item in Model)
                {
                <tr>
                    <td></td>
                    <td>@item.MI_PART_NO</td>
                    <td>@item.DRAW_REV</td>
                    <td>@item.ITEM_DESC</td>
                    <td> @item.NCR_NUM</td>
                    <td>  @(item.INS_DATE.HasValue ? item.INS_DATE.Value.ToString("dd-MMM-yy") : "")</td>
                    <td>@item.INS_QTY</td>
                    <td>@item.REJ_QTY</td>
                </tr>
            }
        </table>
    </div>
}
<div class="page-break">

</div>
